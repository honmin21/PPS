#include <stdio.h>
#include<math.h>

int main() {
    int P,R,T,SI,CI;
    printf("enter principle,rate and time");
    scanf("%d %d %d",&P,&R,&T);
    SI=(P*T*R/100);
    printf("simple interest is %d\n",SI);
    CI= P*pow((1+R/100),T);
    printf("compound interest is %d",CI);
    return 0;
}

OUTPUT:
enter principle,rate and time 4000 60 8
4000 60 8
simple interest is 19200
compound interest is 4000
